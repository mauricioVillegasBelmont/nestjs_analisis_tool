{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    /* Path aliases */
    "paths": {
      "src/*": ["./src/*"],
      "common/*": ["./src/common/*"],
      "database/*": ["./src/database/*"],
      "dbpedia/*": ["./src/dbpedia/*"],
      "documents_environment/*": ["./src/documents_environment/*"],
      "g_services/*": ["./src/g_services/*"],
      "ia_service/*": ["./src/ia_service/*"],
      "py_services/*": ["./src/py_services/*"],
      "site_data/*": ["./src/site_data/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts",
  ],
  "exclude": ["node_modules"]
}
